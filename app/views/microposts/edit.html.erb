<%= form_with(model: @micropost, local: true) do |f| %>
    <div class="form-group">
        <p>今日のランチ<%= f.text_area :status, class: 'form-control', rows: 5 %></p>
        <p>感想<%= f.text_area :content, class: 'form-control', rows: 5 %></p>
        <%=f.label "画像をアップロード" %><br><%= f.file_field :img %>

    </div>
    <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>